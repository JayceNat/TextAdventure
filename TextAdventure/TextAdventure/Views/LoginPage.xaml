<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TextAdventure.Views.LoginPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#282D32">
    <ContentPage.Content>
        <StackLayout Padding="10,0,10,0" VerticalOptions="Center">
            <Label HorizontalOptions="Center"  Text="The Ashbury Haunting" TextColor="DarkOrange"/>
            <Button VerticalOptions="Center" Text="Continue --->" Command="{Binding ContinueGameCommand}" BackgroundColor="DarkSlateGray"/>
            <Button VerticalOptions="Center" Text="New Game" Command="{Binding NewGameCommand}" BackgroundColor="DarkRed"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
